<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dashboard.WalletFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/iconPerson"
            style="@style/SecondaryButton"
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:background="@null"
            app:icon="@drawable/ic_person"
            app:iconGravity="textStart"
            app:iconPadding="10dp"
            app:iconSize="40dp"
            app:iconTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNotification"
            style="@style/SecondaryButton"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:background="@color/primary"
            app:icon="@drawable/ic_notifications"
            app:iconGravity="textTop"
            app:iconPadding="10dp"
            app:iconSize="24dp"
            app:iconTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/viewHeader"
            layout="@layout/view_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/myWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/iconPerson"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/my_wallet_title"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <LinearLayout
            android:id="@+id/buttonBarLayout"
            app:layout_constraintTop_toBottomOf="@+id/myWallet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/SecondaryButton"
                android:id="@+id/actions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/actions"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="bottom"
                android:background="@color/divider_frame" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/myActives"
                style="@style/SecondaryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/my_actives"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <View
                android:id="@+id/divider2"
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="bottom"
                android:background="@color/divider_frame" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/movements"
                style="@style/SecondaryButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/movements"
                android:textColor="@color/black"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dotSpace"
            app:layout_constraintTop_toBottomOf="@+id/buttonBarLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dot1"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:src="@drawable/dot_active"
                android:layout_weight="1"
                app:layout_constraintEnd_toStartOf="@id/dot2" />

            <ImageView
                android:id="@+id/dot2"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:visibility="invisible"
                android:src="@drawable/dot_active"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                app:layout_constraintEnd_toStartOf="@id/dot3"
                app:layout_constraintStart_toEndOf="@id/dot1" />

            <ImageView
                android:id="@+id/dot3"
                android:layout_width="0dp"
                android:visibility="invisible"
                android:layout_height="10dp"
                android:src="@drawable/dot_active"
                android:layout_marginStart="10dp"
                android:layout_weight="1" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerView"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/container_view_without_color">

        <TextView
            android:id="@+id/text_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/total_balance"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/amountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="$16,900USD = 20,000 MXN"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_balance" />

        <LinearLayout
            android:layout_width="145dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amountTextView">


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <HorizontalScrollView
        android:id="@+id/frameValues"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="30dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerView">

        <LinearLayout
            android:id="@+id/cardLayout"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/card_euros"
                android:layout_width="185dp"
                android:layout_height="88dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background_item_selected"
                android:elevation="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_euro" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="@string/title_euros"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="@string/amount_euros"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_dollar"
                android:layout_width="185dp"
                android:layout_height="88dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background_item_selected"
                android:elevation="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_dollar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="@string/title_dollars"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/amountDollar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="@string/amount_dollars"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_pesos"
                android:layout_width="185dp"
                android:layout_height="88dp"
                android:background="@drawable/background_item_selected"
                android:elevation="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_pesos" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="@string/pesos_title"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/amount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="@string/amount_pesos"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/actionButtons"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="510dp"
        android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/solicitude" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/send" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/buy" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/sell" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/textButtons"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="550dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/solicitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:fontFamily="@font/poppins_light"
            android:text="@string/solicit_text"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:fontFamily="@font/poppins_light"
            android:text="@string/send_text"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/buy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/buy_button"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/sell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:fontFamily="@font/poppins_light"
            android:text="@string/sell_button"
            android:textColor="@color/black"
            android:textSize="11sp" />

    </LinearLayout>

<!--   Diseño para sección Mis activos-->


    <LinearLayout
        android:id="@+id/buttonFrame"
        android:layout_width="match_parent"
        android:layout_marginTop="270dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/PrimaryButton"
            android:background="@drawable/border_background"
            android:fontFamily="@font/poppins_semi_bold"
            android:gravity="center_vertical"
            android:text="Tokens"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/amountTextVie"
            android:background="@drawable/border_background"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="@string/nfts_title"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/cryptoItems"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/border_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_matic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/matic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/matic_title"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/amountHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/matic_title"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="3dp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/maticAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="@string/amount_pesos"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/amountHintMatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/amount_hint_dollars"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

            </LinearLayout>

        </LinearLayout>


        <View
            android:id="@+id/divider_view1"
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/divider_frame" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:contentDescription="TODO"
                android:src="@drawable/ic_usdt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/usdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/usdt_title"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/amountUSDT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Tether"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="3dp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/usdtAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="@string/amount_pesos"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/amountHintUsdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/amount_hint_dollars"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/divider_view2"
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/divider_frame" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:contentDescription="TODO"
                android:src="@drawable/ic_wbtc" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wbtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/wbtc_title"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/amountWBTC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/bitcoin_title"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="3dp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wbtcAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="@string/amount_pesos"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/amountHintWbtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/amount_hint_dollars"
                    android:textColor="@color/black"
                    android:textSize="9sp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/divider_view3"
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/divider_frame" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:contentDescription="TODO"
                android:src="@drawable/ic_eth" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/eth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
