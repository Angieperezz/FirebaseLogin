<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dashboard.WalletFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/iconPerson"
            style="@style/SecondaryButton"
            android:layout_width="48dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:icon="@drawable/ic_person"
            android:background="@null"
            android:layout_marginStart="30dp"
            app:iconGravity="textStart"
            app:iconSize="40dp"
            app:iconTint="@null"
            app:iconPadding="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNotification"
            style="@style/SecondaryButton"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:icon="@drawable/ic_notifications"
            android:background="@color/primary"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            app:iconTint="@null"
            app:iconPadding="10dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/viewHeader"
        layout="@layout/view_header"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/container_view"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/text_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="21dp"
            android:text="Balance total"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/amountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="21dp"
            android:text="$16,900USD = 20,000 MXN"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:fontFamily="@font/poppins_semi_bold"
            app:layout_constraintTop_toBottomOf="@+id/text_balance"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@+id/amountTextView"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButton
                android:background="@drawable/border_background"
                android:textColor="@color/colorPrimaryButton"
                android:id="@+id/btn_send"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textSize="8sp"
                android:text="Enviar" />

            <com.google.android.material.button.MaterialButton
                android:background="@drawable/border_background"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorPrimaryButton"
                android:id="@+id/btn_receive"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textSize="8sp"
                android:text="Recibir" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <HorizontalScrollView
        android:id="@+id/frameValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginTop="270dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/containerView"
        app:layout_constraintStart_toStartOf="parent"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/card_euros"
                android:layout_width="185dp"
                android:layout_height="88dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/background_item_selected"
                android:orientation="horizontal"
                android:elevation="5dp">

                <ImageView
                    android:layout_marginStart="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_euro"
                    android:contentDescription="TODO" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Euros digitales" />

                    <TextView
                        android:id="@+id/amount"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="$1,000 EUR" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_dolares"
                android:layout_marginEnd="10dp"
                android:layout_width="185dp"
                android:layout_height="88dp"
                android:background="@drawable/background_item_selected"
                android:orientation="horizontal"
                android:elevation="5dp">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_dollar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Dolares digitales" />

                    <TextView
                        android:id="@+id/amount1"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="$1,000 USD" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_pesos"
                android:layout_width="185dp"
                android:layout_height="88dp"
                android:background="@drawable/background_item_selected"
                android:orientation="horizontal"
                android:elevation="5dp">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_pesos" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Pesos Mexicanos" />

                    <TextView
                        android:id="@+id/amount2"
                        android:textSize="16sp"
                        android:layout_marginTop="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="$1,000 M" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>


        <LinearLayout
            android:id="@+id/buttonFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" >


            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="17dp"
                android:gravity="center_vertical"
                android:text="Tokens"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semi_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/amountTextVie"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="40dp"
                android:gravity="center_vertical"
                android:text="NFTs"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semi_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                style="@style/PrimaryButton"
                android:background="@drawable/container_view"
                android:textColor="@color/primary"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_weight="1"
                android:textSize="10sp"
                android:text="Comprar" />

            <com.google.android.material.button.MaterialButton
                style="@style/PrimaryButton"
                android:background="@drawable/container_view"
                android:layout_marginStart="10dp"
                android:textColor="@color/primary"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_weight="1"
                android:textSize="10sp"
                android:text="Vender" />

        </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/containerView2"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/matic"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/border_background"
                app:icon="@drawable/ic_matic"
                app:iconGravity="textStart"
                app:iconSize="24dp"
                app:iconTint="@null"
                app:iconPadding="10dp"
                android:text="Matic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="USDT" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WBTC" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ETH" />

        </LinearLayout>

    </ScrollView>




</FrameLayout>